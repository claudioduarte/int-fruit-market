<div class="col-12 media p-4 pb-2 bg-white mt-4 mb-4 rounded-3 shadow-sm">
  <h5 class="mb-3">📝 EDIT VENDOR</h5>

  <%= form_with model: @vendor, local: true, class:"needs-validation mb-3", html: {novalidate: true} do |f| %>

  <div class="form-group mb-2">
    <label for="name">Name</label>
    <%= f.text_field :name, class: 'form-control', required: 'true' %>
  </div>

  <div class="form-group mb-2">
    <label for="country">Country</label>
    <%= f.select :country, options_for_select(@all_countries, selected: @vendor.country), {include_blank: "Select a Country"}, {class: 'form-select', required: 'true'} %>
  </div>

  <button type="submit" class="btn btn-primary me-2">UPDATE</button>
  <%= link_to "DELETE", vendor_path(@vendor.id), method: :delete, class: 'btn btn-secondary', data: { confirm: 'Are you sure you want to delete this Vendor?' } %>
<% end %>
</div>
